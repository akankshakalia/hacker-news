{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
          "arrowFunctions": true,
          "blockBindings": true,
          "classes": true,
          "defaultParams": true,
          "destructuring": true,
          "forOf": true,
          "generators": false,
          "modules": true,
          "objectLiteralComputedProperties": true,
          "objectLiteralDuplicateProperties": false,
          "objectLiteralShorthandMethods": true,
          "objectLiteralShorthandProperties": true,
          "spread": true,
          "superInFunctions": true,
          "templateStrings": true,
          "restParams": true,
          "jsx": true
        }
      },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": "error"
    },
    "ignorePatterns": ["*.test.js", "node_modules/"],
    "settings": {
        "react": {
          "pragma": "React",
          "version": "detect"
        }
      }
}